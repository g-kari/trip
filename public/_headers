# Hashed assets (JS, CSS) - immutable, cache for 1 year
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# HTML - always revalidate to get latest SPA shell
/index.html
  Cache-Control: public, no-cache

# Service Worker - always revalidate for update detection
/sw.js
  Cache-Control: public, no-cache

# PWA manifest - cache for 1 day
/manifest.webmanifest
  Cache-Control: public, max-age=86400

# Icons and static images - cache for 7 days
/icons/*
  Cache-Control: public, max-age=604800

# Workbox runtime - immutable (fingerprinted)
/workbox-*.js
  Cache-Control: public, max-age=31536000, immutable
