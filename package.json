    "workbox-window": "^7.4.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260219.0",
    "@eslint/js": "^9.39.1",
    "@tailwindcss/vite": "^4.2.1",
